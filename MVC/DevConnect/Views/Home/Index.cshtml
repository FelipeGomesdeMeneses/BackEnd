@{
    ViewData["Title"] = "Logo DevConnect";
}
<link rel="stylesheet" href="~/css/login.css">

<h1>Tela principal login - DevConnect</h1>
    <main>
        <div>
            <form class="estilo-formulario">
                <img src="~/images/logo-devconnect-md_light.svg" alt="Logo DevConnect">

                <div id="formulario-campos">
                    <label for="">Nome de usuário</label>
                    <input type="text" name="" id="">

                </div>

                <div id="formulario-campos">
                    <label for="">Senha</label>
                    <input type="password" name="" id="">

                </div>

                <button type="submit" class="formulario-botao-azul">Entrar</button>

                <p>ou</p>

                <a href="#">Esqueceu a senha</a>


            </form>

            <section id="secao-cadastro" class="estilo-formulario">
                <p>Não tem uma conta? <a asp-controller="Cadastro" asp-action="Index" >Cadastre-se</a></p>
            </section>


            <p>Obtenha o apliactivo</p>

            <section id="secao-instalacao">
                <img src="~/images/app-store.svg" alt="Imagem falando da instalação no App Store">
                <img src="~/images/google-play.svg" alt="Imagem falando da instalação na Play Store">
            </section>
        </div>
    </main>